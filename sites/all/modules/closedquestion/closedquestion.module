function avoid_back_page_sql($qID) {
  	global $user;
  	
  	$likeCondition = "%". $qID ."%";
  	$result = db_select('last_access', 'la')
  			 ->fields('la', array('uid'))
  			 ->condition('uid', $user->uid, '=')
  			 ->condition('preqid', $likeCondition, 'LIKE')
  			 ->execute();
  
  	if ( !empty($result) ) {
    	return $result->rowCount();
  	} else {
    	return 0;
  	} 
}

