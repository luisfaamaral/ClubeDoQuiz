/**
* Update last access
*/
function update_last_access($uid, $newqid, $status, $qid) {
    // Select preqid list to avoid repeat question.
    $result = db_select('last_access', 'la')
    ->fields('la', array('preqid'))
    ->condition('uid', $uid, '=')
    ->execute()
    ->fetchAssoc();

    if (empty($result) || $result == "") {
        $preqid_dup = $qid .",";
        $preqid = "";
    } else {
        $preqid = $result->preqid;
        $preqid_dup = $preqid . $qid .",";  
    }
  
    if ( is_null($qid) || $qid=="" ) { 
        // new qID with status 0
        $msg = "UpdateLastAccess:: ". date('Ymdgi') .":: New Question: User: ". $uid ." - New qID: ". $newqid;
        
        db_insert('logs')
        ->fields(array(
            'msg' => $msg
        ))
        ->execute();
    
        $result = db_merge('last_access')
                 ->key(array(
                    'uid' => $uid)
                 )
                 ->fields(array(
                    'uid' => $uid,
                    'qid' => $newqid,
                    'status' => $status,
                    'preqid' => $preqid,
                 ))
                 ->updateFields(array(
                    'qid' => $newqid,
                    'status' => $status,
                 ))
          		->execute();
    } else if ( is_null($newqid) || $newqid=="" ) {
        // old qID with status 1
        $msg = "UpdateLastAccess:: ". date('Ymdgi') .":: Question Answered: User: ". $uid ." - qID: ". $qid;
        
        db_insert('logs')
        ->fields(array(
            'msg' => $msg
        ))
        ->execute();
         
        $result = db_merge('last_access')
                 ->key(array('uid' => $uid))
                 ->fields(array(
                    'uid' => $uid,
                    'qid' => $qid,
                    'status' => $status,
                    'preqid' => $preqid,
                 ))
                 ->updateFields(array(
                    'preqid' => $preqid_dup,
                    'status' => $status,
                 ))
                 ->execute();
    } 
}

