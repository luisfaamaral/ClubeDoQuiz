        db_insert('logs')
        ->fields(array(
            'msg' => $msg
        ))
        ->execute();
    } else {
        $preqid = $result->preqid;
    
        if ( !empty($preqid) && $preqid!="" ) {
            $preqid = substr($preqid, 0, strlen($preqid) - 1);
            $preqidStt = " and n.`nid` NOT IN (". $preqid .")";
        }
    }

    $return = db_select('node', 'n')
    ->addField('n', 'nid', 'nid')
    ->addField('u', 'alias', 'alias')
    ->join('taxonomy_index', 'ti', 'ti.nid = n.nid')
    ->join('url_alias', 'u', 'CONCAT("node/", n.nid) = u.source')
    ->condition('n.type', 'closedquestion', '=')
    ->condition('n.nid', $preqid, 'NOT IN')
    ->condition('ti.tid', $tid, '=')
    ->orderRandom()
    ->range(0,1)
    ->execute()
    ->fetchAssoc();

    return $return;
}

